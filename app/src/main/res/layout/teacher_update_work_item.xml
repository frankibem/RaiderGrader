<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="android.app.rgs.com.raidergrader.activities.teacher.TeacherUpdateWorkItemActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/title_layout_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffff">

        <EditText
            android:id="@+id/title_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_title"
            android:inputType="text"
            android:maxLength="50"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/description_layout_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffff">

        <EditText
            android:id="@+id/description_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="text"
            android:maxLength="50"
            android:singleLine="true"
            android:layout_below="@+id/description_textbox"
            android:layout_alignParentStart="true"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/duedate_layout_textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/duedate_textbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Due Date"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_below="@+id/classname_textbox"
                android:layout_alignParentStart="true"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/maxpoints_layout_textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/maxpoints_textbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Max Points"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_below="@+id/maxpoints_textbox"
                android:layout_alignParentStart="true"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/type_layout_textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/type_textbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_below="@+id/type_textbox"
                android:layout_alignParentStart="true"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/class_layout_textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/class_textbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Class"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_below="@+id/class_textbox"
                android:layout_alignParentStart="true"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/update_class_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickUpdate"
        android:text="Update"
        android:background="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />



</LinearLayout>
