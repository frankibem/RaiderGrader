<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.app.rgs.com.raidergrader.activities.teacher.TeacherUpdateAnnouncementActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/announcement_title_layout_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffff">

        <EditText
            android:id="@+id/announcement_title_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_title"
            android:inputType="text"
            android:maxLength="50"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/announcement_description_layout_textbox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColorHint="#ffffff">

        <EditText
            android:id="@+id/announcement_description_textbox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/text_description"
            android:inputType="text"
            android:singleLine="false"
            android:gravity="left" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/update_announcement_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:onClick="onClickUpdate"
        android:text="@string/btn_update" />

</LinearLayout>
