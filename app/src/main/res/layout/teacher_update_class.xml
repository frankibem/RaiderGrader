<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="android.app.rgs.com.raidergrader.activities.teacher.TeacherCreateClassActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffff">

        <EditText
            android:id="@+id/inputTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_title"
            android:inputType="text"
            android:maxLength="50"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutCourseNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffff">

        <EditText
            android:id="@+id/inputCourseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_courseNumber"
            android:inputType="text"
            android:maxLength="50"
            android:singleLine="true"
            android:layout_below="@+id/inputTitle"
            android:layout_alignParentStart="true"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutPrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/inputPrefix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_prefix"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_below="@+id/inputTitle"
                android:layout_alignParentStart="true"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/inputSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_section"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_below="@+id/inputTitle"
                android:layout_alignParentStart="true"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grade Distribution"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:paddingEnd="5sp"
        android:textSize="@dimen/font_size_medium"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/inputExam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_exam"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_below="@+id/inputTitle"
                android:layout_alignParentStart="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/inputProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_project"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_below="@+id/inputTitle"
                android:layout_alignParentStart="true"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/inputQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_quiz"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_below="@+id/inputTitle"
                android:layout_alignParentStart="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutHomework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/inputHomework"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_homework"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_below="@+id/inputTitle"
                android:layout_alignParentStart="true"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/inputOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_other"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_below="@+id/inputTitle"
                android:layout_alignParentStart="true"/>

        </android.support.design.widget.TextInputLayout>



    </LinearLayout>


    <Button
        android:id="@+id/update_class_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickUpdate"
        android:text="Update"
        android:background="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />



</LinearLayout>
